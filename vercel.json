{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "TWITTER_BEARER_TOKEN": "@twitter_bearer_token",
    "TWITTER_API_KEY": "@twitter_api_key",
    "TWITTER_API_SECRET": "@twitter_api_secret",
    "TWITTER_ACCESS_TOKEN": "@twitter_access_token",
    "TWITTER_ACCESS_SECRET": "@twitter_access_secret"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_NAME": "Twitter/X Crawler",
      "NEXT_PUBLIC_APP_DESCRIPTION": "Real-time Twitter/X crawler for analyzing tweets and conversations"
    }
  },
  "functions": {
    "src/app/api/crawl/route.ts": {
      "maxDuration": 30
    }
  }
}